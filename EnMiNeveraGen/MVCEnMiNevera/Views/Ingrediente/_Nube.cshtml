@model IList<MVCEnMiNevera.Models.Ingrediente>
@{
    Layout = null;
}

<div class="row">
    <div id="demo" class="wordcloud">
        @{ 
            int maximo = Model.Count();

            foreach (var item in Model)
            {
                <span data-weight="@maximo"> @Html.DisplayFor(model => item.Nombre)</span>

                maximo -= 1;
            }
        }
    </div>

</div>
