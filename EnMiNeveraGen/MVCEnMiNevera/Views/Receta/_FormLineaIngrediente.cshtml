@model MVCEnMiNevera.Models.LineaIngrediente
@{
    Layout = null;
}
@*///////////////////////////////////////////////////////*@
@* Esta es la ventana modal para añadir linea ingrediente*@
@*///////////////////////////////////////////////////////*@
<div class="modal fade" id="modalAddLineaIngrediente" tabindex="-1" role="dialog" aria-labelledby="Ingrediente">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Añadir Ingrediente</h4>
            </div>

            <form>
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Cantidad, new { @class = "control-label" })
                        @Html.EditorFor(model => model.Cantidad, null, "Cantidad", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Cantidad)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Unidad, new { @class = "control-label" })
                        <select class="form-control" id="Unidad" name="Unidad" value="1" data-val="true" data-val-required="Debe indicar la unidad de medida del ingrediente">
                            <option value="1" selected>gramos</option>
                            <option value="2">mililitros</option>
                            <option value="3">unidades</option>
                        </select>
                        @Html.ValidationMessageFor(model => model.Unidad)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.NombreIngrediente, new { @class = "control-label" })
                        @Html.EditorFor(model => model.NombreIngrediente, null, "NombreIngrediente", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NombreIngrediente)
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button id="btn-add-ingrediente" type="button" class="btn btn-primary">Añadir</button>
                </div>
            </form>
        </div>
    </div>
</div>

