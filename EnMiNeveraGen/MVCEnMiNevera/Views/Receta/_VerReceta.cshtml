@model MVCEnMiNevera.Models.Receta
@{
    Layout = null;
}

<div class="col-lg-3 col-sm-4 col-xs-12">
    <div class="thumbnail">
        <img src="@Html.DisplayFor(model => model.Foto)" alt="@Html.DisplayFor(model => model.Nombre)">
        <div class="caption">
            <h3>@Html.DisplayFor(model => model.Nombre)</h3>
            <p>@Html.ActionLink("Ver receta", "../receta/ver", new { id = Model.id })</p>
        </div>
    </div>
</div>
